<section class="todoapp">
  <header class="header">
    <h1>todos</h1>
    <%= render "todos/form" %>
  </header>

  <% if @all_todos.any? %>
    <section class="main" data-controller="todos">
      <input class="toggle-all" id="toggle-all" type="checkbox" data-action="todos#toggleAll">
      <label for="toggle-all">
        Mark all as complete
      </label>
      <ul class="todo-list">
        <%= render partial: "todo", collection: @filtered_todos %>
      </ul>
    </section>
  <% end %>

  <%= render "/todos/actions" if @all_todos.any? %>
</section>

<%= render "/todos/badges" %>
